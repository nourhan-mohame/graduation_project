<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".medical_main_list"
    android:background="@drawable/back">
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="360dp"
        android:layout_height="87dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="Medical Care"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="347dp"
        android:layout_height="92dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="Medical Doctor"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/tv_1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/tv_1"
        app:layout_constraintTop_toBottomOf="@id/tv_1"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="339dp"
        android:layout_height="87dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="Psychiatrist"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/tv_2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/tv_2"
        app:layout_constraintTop_toBottomOf="@id/tv_2"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>