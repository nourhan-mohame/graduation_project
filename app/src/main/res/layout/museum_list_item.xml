<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/museum"
    android:layout_height="350dp"
    android:layout_margin="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#B19FFC"
        android:orientation="vertical">

        <TextView

            android:id="@+id/namuse"
            android:layout_width="334dp"
            android:layout_height="75dp"
            android:gravity="center"
            android:text="Egyptian Museum"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/frommuse"
            android:layout_width="287dp"
            android:layout_height="43dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="from:                        to:            "
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/namuse"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/daymuse"
            android:layout_width="263dp"
            android:layout_height="51dp"
            android:layout_marginTop="8dp"
            android:text="Day:"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.362"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frommuse"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imagemuse"
            android:layout_width="368dp"
            android:layout_height="163dp"
            android:src="@drawable/ccc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/daymuse"
            app:layout_constraintVertical_bias="0.342"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>